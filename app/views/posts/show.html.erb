<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 col-md-6">
    </div>
    <div class="col-sm-8 col-md-6">
<h1> <%= @post.title %> </h1>
<h6><%=@post.created_at %>  <%= User.find(@post.user_id).email %></h6>
<p> <%= @post.content %></p>

<p> <%= link_to 'Delete', post_path(@post), method: :delete, data: {Confirm:"Are you sure?"} %>  <%= link_to 'Edit', edit_post_path(@post) %> </p>
<br><br><br>

<h2> <%= @post.comments.count %> Comments </h2>
<%= render @post.comments %>

<h3> Add Comment </h3>
<%= render "comments/form" %>
    </div>
  </div>
</div>

